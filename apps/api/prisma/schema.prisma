datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String    @id @default(cuid())
  name            String
  email           String    @unique
  passwordHash    String
  emailVerifiedAt DateTime?
  createdAt       DateTime  @default(now())

  otps   EmailOtp[]
  claims Claim[]
}

model EmailOtp {
  id        String   @id @default(cuid())
  email     String
  codeHash  String
  expiresAt DateTime
  attempts  Int      @default(0)
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  @@index([email])
}

model Settings {
  id                   Int      @id @default(1)
  totalPages           Int      @default(604)
  segmentsPerMonth     Int      @default(30)
  reminderIntervalDays Int      @default(7)
  timezone             String   @default("Europe/Berlin")
  appUrl               String   @default("http://localhost:5173")
  updatedAt            DateTime @updatedAt
}

model Admin {
  id    String @id @default(cuid())
  email String @unique
}

model Cycle {
  id          String    @id @default(cuid())
  monthKey    String    @unique // e.g. "2026-02"
  generatedAt DateTime  @default(now())
  segments    Segment[]
}

model Segment {
  id           String  @id @default(cuid())
  cycleId      String
  index        Int     // 0-based
  startPage    Int
  endPage      Int
  surahSpanJson String // JSON array
  juzSpanJson   String // JSON array
  createdAt    DateTime @default(now())

  cycle  Cycle   @relation(fields: [cycleId], references: [id], onDelete: Cascade)
  claims Claim[]

  @@unique([cycleId, index])
}

model Claim {
  id          String    @id @default(cuid())
  userId      String
  segmentId   String
  claimedAt   DateTime  @default(now())
  completedAt DateTime?

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  segment Segment @relation(fields: [segmentId], references: [id], onDelete: Cascade)

  @@unique([userId, segmentId])
}
