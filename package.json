{
  "name": "stammkhatm",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "build": "pnpm -r build",
    "db:migrate": "pnpm --filter @stammkhatm/api db:migrate",
    "db:seed": "pnpm --filter @stammkhatm/api db:seed",
    "db:push": "pnpm --filter @stammkhatm/api db:push",
    "lint": "pnpm -r lint"
  },
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "esbuild"
    ]
  }
}
